<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maindisplay"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Display">


    <EditText
        android:id="@+id/wishNameEditText"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:hint="물건 이름을 입력해주세요."
        android:textStyle="bold"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today_date"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/wishPrice"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:hint="물건 가격을 입력해 주세요."
        android:textStyle="bold"
        android:background="@android:color/transparent" />


    <android.widget.Button
        android:id="@+id/wishlistbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="750dp"
        android:background="@drawable/wishlist_button"
        />

</RelativeLayout>